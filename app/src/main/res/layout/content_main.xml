<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fadeScrollbars="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">






    <TextView
        android:id="@+id/welcomeText"
        android:text="Welcome to Emergency Car Services\n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <TextView android:text="ECS is a powerful diagnostic tool in your pocket. ECS is supported on Android devices and is coming to other platforms soon.\n"
        android:layout_width="wrap_content"
        android:id="@+id/bodyText"
        android:layout_below="@id/welcomeText"
        android:layout_height="wrap_content" />

       <TextView
        android:id="@+id/howToText"
        android:text="How To:\n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_below="@id/bodyText"
        />

    <TextView
        android:id="@+id/body2Text"
        android:text="1. Click on Alerts in the left navigation pane.\n 2. Enable Bluetooth.\n 3. Make sure to pair your device before you start the app.\n 4. Click on the paired OBD device and let your mobile do rest of the work.\n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/howToText"
        />



</RelativeLayout>
